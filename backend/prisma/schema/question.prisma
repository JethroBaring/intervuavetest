model Question {
  id            String            @id @default(cuid())
  questionText  String
  alignedWith    InspiredBy // "mission", "vision", "culture" (nullable)
  templateId    String
  template      InterviewTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  evaluates     String

  responses Response[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  deletedAt DateTime?
}

enum InspiredBy {
  MISSION
  VISION
  CULTURE
}
